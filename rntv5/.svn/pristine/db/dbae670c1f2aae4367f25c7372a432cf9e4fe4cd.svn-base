.profile-view {
	position: relative;
	width: 100%;
	
	/*border: 1px solid #F00;*/
	/*display: inline-flex;*/

	display: flex;
	-webkit-flex-direction: row; /* Safari */
  	flex-direction: row;
  	flex-wrap: wrap;
  	-webkit-justify-content: flex-start; /* Safari */
  	justify-content:         flex-start;
  	-webkit-justify-content: space-around; /* Safari */
  	justify-content: space-around;

  	margin: 0px;
}

.profile-view div.profile-img,
.profile-view div.profile-detail { 
	border: 1px solid #cdcdcd; 
	min-height: 200px;
}
.profile-view div.profile-img { width: 220px; text-align: center; }
.profile-view div.profile-detail { flex: 1; margin-left: 20px; padding: 10px; }
.profile-view div.profile-img img{ 
	border: 3px solid #d6d6d6;
    -webkit-box-shadow: 0px 1px 19px 5px rgba(0,0,0,0.34);
    -moz-box-shadow: 0px 1px 19px 5px rgba(0,0,0,0.34);
    box-shadow: 0px 1px 19px 5px rgba(0,0,0,0.34);
    margin: auto;
    width: 200px;
    height: 200px;

    margin-top: 15px;
 }

.profile-view .age {
	font-family: 'Roboto Condensed Light' !important;
	font-size: 18px;
	font-weight: 600;
	color: #12a9e0;
	text-align: center;
	margin: 5px;
}
.UserName {
	font-family: 'Roboto Condensed Light' !important;
	font-size: 20px;
	font-weight: 600;
	color: #12a9e0;
	text-align: left;
	margin: 0px 0px 10px;
}

.UserName .UserEdit {
	float: right;
	font-size: 18px;
	color: #056a88;
}
.UserName .UserEdit:HOVER {
	color: #fc6f03;
}

.profile-img-uploader {
	margin-top: 10px;
}
.profile-view .btn.btn-outline.green {
	background-color: #056a88;
    color: #fff;
}
.profile-view .btn.btn-outline.green:hover {
	border-color: #056a88;
    color: #056a88;
    background: none;
}

/* RESPONSIVE */
@media screen and (max-width:680px) {
	.profile-view > div.profile-detail { flex: none; width: 100%; margin: 15px 0px; }
}

@media screen and (min-width:992px) and (max-width:1170px) {
	.profile-view > div.profile-detail { flex: none; width: 100%; margin: 15px 0px;  }
}
