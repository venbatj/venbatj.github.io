<div class="ui-page">
    <div class="portlet light mb-3">
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-12">
                    <h3><strong>User Info</strong></h3>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet light">
        <div class="portlet-body">            
            <div class="row">
                <div class="col-xs-12 col-md-9">
                    <table id="internal-user-management-data-table" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                        <thead>
                            <tr>
                                <td class="check-box-column">
                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" for="check-all-internal-user-management">
                                        <input type="checkbox" class="checkboxes check-all" value="1" id="check-all-internal-user-management"/>
                                        <span></span>
                                    </label>
                                </td>
                                <td>Employee ID</td>
                                <td>Location</td>
                                <td>Department</td>
                                <td>Title</td>
                                <td>Email ID</td>
                                <td>Phone #</td>
                                <td class="action-column">Edit</td>
                            </tr>
                        </thead>
                    </table>

                </div>
                <div class="col-xs-12 col-md-3">
                    <form name="FormInternalUserManagement" role="form" novalidate>
                        <div class="form-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>Employee ID</label>
                                        <div class="input-group">
                                            <input id="emp" ng-model="FormData.Employee" name="Employee" type="text"  ng-disabled="DisableTextBox"  class="form-control"   />
                                            <!-- <p ng-show="FormInternalUserManagement.Employee.$invalid && FormInternalUserManagement.Employee.$touched" class="help-block">This field is required.</p> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>Location</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.Location" name="Location" type="text" class="form-control"  />
                                            <!-- <p ng-show="FormInternalUserManagement.Location.$invalid && FormInternalUserManagement.Location.$touched" class="help-block">This field is required.</p> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                <div class="form-group" ng-class="{'has-error' : FormInternalUserManagement.Department.$invalid && FormInternalUserManagement.Department.$touched}">
                                    <label class="fld-required">Department</label>
                                    <select id="department" name="Department" class="form-control select2" required> 
                                            <option value="">--Select--</option>
                                            <option value="Delivery">Delivery</option>
                                            <option value="Admin">Admin</option>
                                            <option value="Sales">Sales</option>
                                            <option value="Finance">Finance</option>
                                            </select>
                                </div>
                            </div>
                                 <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label>Title</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.Title" name="Title" type="text" class="form-control"  />
                                        </div>
                                    </div>
                                </div> 
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>Email ID</label>
                                        <select id="email" name="Email" class="form-control" > 
                                                <option value="">--Select--</option>
                                                <option value="Yes">Yes</option>
                                                <option value="No">No</option>
                                                </select>
                                    </div>
                                </div> 
                                <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label>Phone #</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.Phone" name="Phone" type="text" class="form-control"/>
                                        </div>
                                    </div>
                                </div> 
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <div class="action-group">
                                            <button type="button" ng-click="formSubmit(FormInternalUserManagement.$valid)" class="btn blue" ng-disabled="FormInternalUserManagement.$invalid">Save</button>
                                            <button type="button" ng-click="formClear()" class="btn green">Clear</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- <button type="button" ng-click="formClear()" class="btn green">Submit</button> -->
                        </div>
                        <div ng-if="ShowErrorMsg" class="alert alert-danger">
                            <button class="close" data-close="alert"></button>
                            <span class="error-txt">{{ErrorMsg}}</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>    
</div>