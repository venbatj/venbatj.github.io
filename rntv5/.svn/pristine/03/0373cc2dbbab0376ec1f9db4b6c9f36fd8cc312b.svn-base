<div class="portlet-body">
	<div class="form-body">
		<div class="row">
			<form name="FormCostingInfo" id="form-costing-info" role="form" novalidate>
				<div class="form-body">
					<div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label>Category</label>
                                <div class="input-group">
                                    <select id="cost-category" name="Category" class="form-control select2"
                                    ng-disabled="disable" ng-model="CostingInfo.CategoryID" ng-change="onCategoryChange(CostingInfo.CategoryID)" > 
                                        <option value="{{Category.ID}}" ng-repeat="Category in CategoryList">{{Category.CategoryName}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label>Product</label>
                                <div class="input-group">
                                    <select id="cost-product" name="Product" class="form-control select2"
                                    ng-disabled="disable" ng-model="CostingInfo.ProductID" ng-change="onProductChange(CostingInfo.ProductID)"  > 
                                        <option value="{{Product.ID}}" ng-repeat="Product in ProductList">{{Product.ProductName}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label>Variant</label>
                                <div class="input-group">
                                    <select id="cost-variant" name="Variant" class="form-control select2"
                                    ng-disabled="disable" ng-model="CostingInfo.VariantID" ng-change="onVariantChange(CostingInfo.VariantID)"> 
                                        <option value="{{Variant.VariantID}}" ng-repeat="Variant in VariantList">{{Variant.VariantName}}</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group" ng-class="{'has-error' : FormCostingInfo.Cost.$invalid && FormCostingInfo.Cost.$touched}">
                                <label class="fld-required">Cost / Linen</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" ng-keypress="filterValue($event)" name="Cost" ng-disabled="disable" ng-model="CostingInfo.Cost" required>
                                    <p ng-show="FormCostingInfo.Cost.$invalid && FormCostingInfo.Cost.$touched" class="help-block">This field is Required.</p>
                                </div>
                            </div>
                        </div>					
					</div>
					<div class="row">
						<div class="col-xs-12">
							<div class="form-group">
								<label>&nbsp;</label>
								<div class="action-group">
									<button type="button" ng-click="saveLinenCost(FormCostingInfo)" class="btn blue" ng-disabled="FormCostingInfo.$invalid"> Add Data</button>
									<button type="button" ng-click="clearLinenCosting(FormCostingInfo)" class="btn green fa fa-close"> Clear</button>								
								</div>
							</div>
						</div>
						<div class="col-xs-12">
							<div ng-if="CostIShowErrorMsg" class="alert alert-danger">
								<button class="close" data-close="alert"></button>
								<span class="error-txt">{{CostIErrorMsg}}</span>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
<div class="portlet-body">
	<div class="form-body">
		<div class="portlet light form-view mb-3" >
			<div class="portlet-title">
				<div class="caption">
					<h3 class="UserName">
						Costing Info
					</h3>
				</div>					
			</div>
			<div class="row">
				<div class="col-sm-12">
					<table id="costing-data-table" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
						<thead>
							<tr>
								<td class="check-box-column">
									<label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" for="check-all-linen-costing">
										<input type="checkbox" class="checkboxes check-all" value="1" id="check-all-linen-costing"/>
										<span></span>
									</label>
								</td>
								<td>Category</td>
								<td>Product</td>
								<td>Variant</td>
								<td>Cost / Linen</td>
								<td class="action-column">Edit</td>
							</tr>
						</thead>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal fade in" id="costing-info" data-width="450">  
	<div class="modal-header" style="background-color: #299d9d;">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="false"></button>
		<h3><span class="modal-title custom-font-color">RNT - Linen supplier Management</span></h3>
	</div>
	<div class="modal-header">
		<p><h3>Costing Info - Saved Successfully</h3></p>
		<button class="btn green" style="float: right;" data-dismiss="modal" aria-hidden="false"> Ok</button>
	</div>
</div>