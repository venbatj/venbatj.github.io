            <!-- <div class="col-sm-12 col-md-7"> -->
                <form name="FormShippingInfo" id="form-shipping-info" role="form" novalidate>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group" ng-class="{'has-error' : FormShippingInfo.FirstName.$invalid && FormShippingInfo.FirstName.$touched}">
                                <label class="fld-required">First Name</label>
                                <div class="input-group">
                                    <input type="text" ng-disabled="disable" ng-model="ShippingInfo.FirstName" name="FirstName" onkeydown="return /^[a-zA-Z\. ]*$/i.test(event.key)" class="form-control" required /> 
                                    <p ng-show="FormShippingInfo.FirstName.$invalid && FormShippingInfo.FirstName.$touched" class="help-block">This field is required.</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label>Last Name</label>
                                <div class="input-group">
                                    <input type="text" ng-disabled="disable" ng-model="ShippingInfo.LastName" name="LastName" onkeydown="return /^[a-zA-Z\. ]*$/i.test(event.key)" class="form-control" /> 
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group" ng-class="{ 'has-error' : FormShippingInfo.EmailID.$dirty && FormShippingInfo.EmailID.$error.pattern}">
                                <label class="fld-required">Email</label>
                                <div class="input-group">
                                    <input type="text" class="form-control" name="EmailID" ng-disabled="disable" ng-model="ShippingInfo.EmailID" required
                                    ng-pattern="/^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/">
                                    <p ng-show="FormShippingInfo.EmailID.$dirty && FormShippingInfo.EmailID.$error.pattern" 
                                    class="help-block">Please Enter Valid Email</p> 
                                </div>
                            </div>
                        </div>		
                        <div class="col-xs-12 col-sm-6 col-md-3">
                            <div class="form-group">
                                <label class="fld-required">Location</label>
                                <div class="input-group">
                                    <select id="shipp-location" name="LocationID" class="form-control select2" ng-disabled="disable" ng-model="ShippingInfo.LocationID" ng-change="onSLocationChange(ShippingInfo.LocationID)" required> 
                                        <option value="{{CL.ID}}" ng-repeat="CL in LocationList">{{CL.LocationName}}</option>
                                    </select>
                                </div>
                            </div>
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-4">
                            <div class="form-group" ng-if="!HideInviteShipping">
                                <label>{{SISendInviteLabel}}</label>
                                <div class="mt-radio-inline">
                                    <label class="mt-radio">
                                        <input type="radio" name="SendInvite" id="SISendInviteY" ng-model="ShippingInfo.SendInvite" value="Y" > Yes
                                        <span></span>
                                    </label>
                                    <label class="mt-radio">
                                        <input type="radio" name="SendInvite" id="SISendInviteN" ng-model="ShippingInfo.SendInvite" value="N"> No
                                        <span></span>
                                    </label>
                                </div>
                            </div>
                        </div> 
                        <div class="col-xs-12 col-md-8">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <div class="action-group">
                                    <button type="button" ng-click="saveShippingDetail(FormShippingInfo)" class="btn blue fa fa-save"
                                     ng-disabled="FormShippingInfo.$invalid"> Save</button>
                                    <button type="button" ng-click="clearShippingDetail(FormShippingInfo)" class="btn green">
                                    <i class="fa fa-close"> Clear</i></button>                                
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div ng-if="SIShowErrorMsg" class="alert alert-danger">
                                <button class="close" data-close="alert"></button>
                                <span class="error-txt">{{SIErrorMsg}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="row" ng-show="locationform">
                        <div class="col-xs-12 caption-right">
                            <div class="form-group">
                                <label id="sspacing"></label>
                                <label id="slocation-name" name="LocationName"></label>
                                <label id="scoma1"></label>
                                <label>&nbsp;</label>
                                <label id="slocation-address" name="LocationAddress"></label>
                                <label id="scoma2"></label>
                                <label>&nbsp;</label>
                                <label id="slocation-city" name="LocationCity"></label>
                                <label id="scoma3"></label>
                                <label>&nbsp;</label>
                                <label id="slocation-state" name="LocationState"></label>
                                <label id="scoma4"></label>
                                <label>&nbsp;</label>
                                <label id="slocation-country" name="LocationCountry"></label>
                                <label id="scoma5"></label>
                                <label>&nbsp;</label>
                                <label id="slocation-phone" name="LocationPhone"></label>
                                <label id="scoma6"></label>
                                <label>&nbsp;</label>
                                <label id="slocation-zip" name="LocationZipcode"></label>
                            </div>
                        </div>
                    </div>
                </form>
            <!-- </div> -->
        </div> 
    </div>
</div> 		
<div class="portlet-body">
    <div class="form-body">
        <div class="portlet light form-view mb-3" >
            <div class="portlet-title">
                <div class="caption">
                    <h3 class="UserName">
                        Shipping Info
                    </h3>
                </div>					
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table id="shipping-details-data-table" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                        <thead>
                            <tr>
                                <td class="check-box-column">
                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" for="check-all-customer-shipping">
                                        <input type="checkbox" class="checkboxes check-all" value="1" ng-model="selectAll" id="check-all-customer-shipping"/>
                                        <span></span>
                                    </label>
                                </td>
                                <td>Name</td>
                                <td>Email</td>
                                <td>Location</td>
                                <td class="action-column">Edit</td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade in" id="shippingInfo"  data-width="450">  
    <div class="modal-header" style="background-color: #299d9d;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="false"></button>
        <h3><span class="modal-title custom-font-color">RNT - Customer Management</span></h3>
    </div>
    <div class="modal-header ">
        <p><h3>Shipping Info - Saved Successfully</h3></p>
    </div>
</div>