<div class="ui-page">
    <div class="portlet light mb-3">
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-12">
                    <h3><strong>Email Configuration</strong></h3>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet light">
        <div class="portlet-body">            
            <div class="row">
                <div class="col-xs-12 col-md-9">
                    <table id="email-configuration-data-table" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                        <thead>
                            <tr>
                                <td class="check-box-column">
                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" for="check-all-email-configuration">
                                        <input type="checkbox" class="checkboxes check-all" value="1" id="check-all-email-configuration"/>
                                        <span></span>
                                    </label>
                                </td>
                                <td>Host</td>
                                <td>Port</td>
                                <td>SMTP Secure</td>
                                <td>Sender Name</td>
                                <td>User Name</td>
                                <td class="action-column">Edit</td>

                            </tr>
                        </thead>
                    </table>

                </div>
                <div class="col-xs-12 col-md-3">
                    <form name="FormEmailConfiguration" role="form" novalidate>
                        <div class="form-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group" ng-class="{'has-error' : FormEmailConfiguration.Host.$invalid && FormEmailConfiguration.Host.$touched}">
                                        <label class="fld-required">Host</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.Host" name="Host" type="text" class="form-control" required />
                                            <p ng-show="FormEmailConfiguration.Host.$invalid && FormEmailConfiguration.Host.$touched" class="help-block">This field is required.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group" ng-class="{'has-error' : FormEmailConfiguration.Port.$invalid && FormEmailConfiguration.Port.$touched}">
                                        <label class="fld-required">Port</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.Port" name="Port" type="text" class="form-control" required />
                                            <p ng-show="FormEmailConfiguration.Port.$invalid && FormEmailConfiguration.Port.$touched" class="help-block">This field is required.</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12">
                                    
                                        <div class="form-group" ng-class="{'has-error' : FormEmailConfiguration.SMTPSecure.$invalid && FormEmailConfiguration.SMTPSecure.$touched}">
                                            <label>SMTP Secure</label><br>
                                            <input type="radio" name="SMTPSecure" value="Yes"> Yes
                                            <input type="radio" name="SMTPSecure" value="No"> No

                                        </div>
                                    </div> 
                                 <div class="col-xs-12">
                                    <div class="form-group" >
                                        <label>Sender Name</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.SenderName" name="SenderName" type="text" class="form-control"  />
                                        </div>
                                    </div>
                                </div> 
                                <div class="col-xs-12">
                                    <div class="form-group" ng-class="{'has-error' : FormEmailConfiguration.UserName.$invalid && FormEmailConfiguration.UserName.$touched}">
                                        <label class="fld-required">User Name</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.UserName" name="UserName" type="text" class="form-control" required />
                                            <p ng-show="FormEmailConfiguration.UserName.$invalid && FormEmailConfiguration.UserName.$touched" class="help-block">This field is required.</p>
                                        </div>
                                    </div>
                                </div> 
                                <div class="col-xs-12">
                                        <script>
                                                function mouseoverPass(obj) {
                                                    var obj = document.getElementById('myPassword');
                                                    obj.type = "text";
                                                }
                                                function mouseoutPass(obj) {
                                                    var obj = document.getElementById('myPassword');
                                                    obj.type = "password";
                                                }
                                                </script>
                                    <div class="form-group" ng-class="{'has-error' : FormEmailConfiguration.Password.$invalid && FormEmailConfiguration.Password.$touched}">
                                        <label class="fld-required">Password</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.Password" name="Password" type="text" id="myPassword" class="form-control" onmouseout="mouseoutPass();" onmouseover="mouseoverPass();" required />
                                            <p ng-show="FormEmailConfiguration.Password.$invalid && FormEmailConfiguration.Password.$touched" class="help-block">This field is required.</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <div class="action-group">
                                            <button type="button" ng-click="formSubmit(FormEmailConfiguration.$valid)" class="btn blue" ng-disabled="FormEmailConfiguration.$invalid">Save</button>
                                            <button type="button" ng-click="formClear()" class="btn green">Clear</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div ng-if="ShowErrorMsg" class="alert alert-danger">
                            <button class="close" data-close="alert"></button>
                            <span class="error-txt">{{ErrorMsg}}</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>    
</div>