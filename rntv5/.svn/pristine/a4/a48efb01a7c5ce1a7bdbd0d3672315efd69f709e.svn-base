<div class="ui-page compact">
    <div class="portlet light mb-3">
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="top-control-bar">
                        <h3 style="text-align: left;">
                            <button ng-click="BackManagement()" class="btn blue fa fa-reply-all"> Back</button>
                            <strong>Customer Management</strong>
                        </h3>  
                        <div class="col-xs-12 col-md-2">
                            <div class="form-group">
                                <div class="input-group">
                                    <select id="customer-type" name="CustomerTypeID" ng-model="BasicDetail.CustomerTypeID" ng-change="onListingChange();ContractTypeChange(BasicDetail.CustomerTypeID)" class="form-control select2" required> 
                                        <option></option>
                                        <option value="ContractAll">All</option>
                                        <option value="{{Cs.ID}}" ng-repeat="Cs in CustomerTypeList" >{{Cs.CustomerType}}</option>
                                        <p ng-show="FormBasicDetail.CustomerTypeID.$invalid && FormBasicDetail.CustomerTypeID.$touched" class="help-block">This field is required.</p> 
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-2">
                            <div class="form-group">
                                <div class="input-group">
                                    <select id="account-manager" name="AccountManager" 
                                    ng-model="BasicDetail.AccountManager" ng-change="displayEmail(BasicDetail.AccountManager);" class="form-control select2" required> 
                                        <option value="{{Am.ID}}" ng-repeat="Am in AccountManagerList">{{Am.FirstName}}</option>
                                    </select>
                                </div>
                            </div>
                        </div> 
                        <div class="col-xs-12 col-md-2">
                            <a tooltip="Search"><button class="fa fa-search btn green" ng-click="Searching()">Search</button></a>
                        </div>
                        <div style="text-align: right;" class="action-group  caption-right">
                            <button ng-click="importCustomer()" class="btn green fa fa-arrow-circle-down custom-buttons" tooltip="Click here to import customer data in bulk using our excel template"
                             tooltip-placement="bottom"> Import Customers</button>
                            <button type="button" ng-click="openAddPage()" class="btn blue fa fa-user-plus custom-buttons" tooltip="Click here to add a new customer" tooltip-placement="bottom"> Add</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet light">
        <div class="portlet-body">
            <table id="customer-managment-data-table" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                <thead>
                    <tr>
                        <td class="check-box-column">
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" for="check-all-customer-details">
                                <input type="checkbox" class="checkboxes check-all" value="1" id="check-all-customer-details"/>
                                <span></span>
                            </label>
                        </td>
                        <td>Customer Name</td>
                        <td>Customer Type</td>
                        <td>Account Manager</td>
                        <td>Number of Location</td>
                        <td>Contract Number of Locations</td>
                        <td>Status</td>
                        <td class="action-column">Action</td>
                    </tr>
                </thead>
            </table>
        </div>
    </div>  
</div>