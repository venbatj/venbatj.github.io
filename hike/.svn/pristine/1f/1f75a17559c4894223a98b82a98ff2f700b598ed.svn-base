<div class="portlet-body">
    <div class="form-body">
        <form name="FormAssignLaundry">
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <label class="fld-required">Location</label>
                        <div class="input-group">
                            <select id="lh-location" name="LocationID" class="form-control select2" ng-model="AssignLaundry.LocationID" required
                             ng-change="onLHLocationChange(AssignLaundry.LocationID);locationDate(AssignLaundry.LocationID)"> 
                                <option value="{{CL.ID}}" ng-repeat="CL in LocationList">{{CL.LocationName}}</option>
                            </select>
                        </div>
                    </div>
                </div> 
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <div class="input-group">
                            <label class="fld-required">Laundry Assignment</label>
                            <select id="laundry-id" name="LaundryID" class="form-control select2" required
                                ng-model="AssignLaundry.LaundryID" ng-change="onLaundryIDChange(AssignLaundry.LaundryID)"> 
                            <option value="{{LID.ID}}" ng-repeat="LID in LaundryIDList">{{LID.LaundryName}}</option>
                            </select>
                        </div>
                    </div>
                </div> 
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group" ng-class="{'has-error' : FormAssignLaundry.DeliveryStartDate.$invalid && FormAssignLaundry.DeliveryStartDate.$touched}">
                        <label class="fld-required">Delivery Start Date</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="LaundryStart" ng-model="AssignLaundry.DeliveryStartDate" required>
                            <span class="input-group-addon" id="LaundryStart" >
                                <span class="fa fa-calendar" id="laundry-start"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group" ng-class="{'has-error' : FormAssignLaundry.DeliveryEndDate.$invalid && FormAssignLaundry.DeliveryEndDate.$touched}">
                        <label class="fld-required">Delivery End Date</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="LaundryEnd" ng-model="AssignLaundry.DeliveryEndDate" required> 
                            <span class="input-group-addon" id="LaundryEnd" >
                                <span class="fa fa-calendar" id="laundry-end"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="form-group">
                        <div class="input-group">
                            <label class="fld-required">Logistics</label>
                            <select id="logistics" name="Logistics" class="form-control select2" required
                                ng-model="AssignLaundry.Logistics" ng-change="onLogisticsChange(L.Logistics)"> 
                            <option value="{{L.ID}}" ng-repeat="L in LogisticsList">{{L.Logistics}}</option>
                            </select>
                        </div>
                    </div>
                </div> 
                <div class="col-xs-12 col-sm-6 col-md-3" ng-if="AssignLaundry.Logistics == 3">
                    <div class="form-group" ng-class="{'has-error' : FormAssignLaundry.ThirdPartyName.$invalid && FormAssignLaundry.ThirdPartyName.$touched}">
                        <label class="fld-required">Name Of Third Party</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="ThirdParty" ng-model="AssignLaundry.ThirdPartyName" required> 
                            <p ng-show="FormAssignLaundry.ThirdPartyName.$invalid && FormAssignLaundry.ThirdPartyName.$touched" class="help-block">This field is required.</p>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-3" ng-show="Reasonforchange">
                    <div class="form-group" ng-class="{'has-error' : FormAssignLaundry.Reason.$invalid && FormAssignLaundry.Reason.$touched}">
                        <label class="fld-required">Reason</label>
                        <div class="input-group">
                            <input type="text" class="form-control" ng-model="AssignLaundry.Reason"> 
                            <p ng-show="FormAssignLaundry.Reason.$invalid && FormAssignLaundry.Reason.$touched" class="help-block">This field is required.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 caption-right" ng-show="laundryhide">
                    <div class="form-group">
                        <label id="lh-spacing"></label>
                        <label id="lh-location-name" name="LocationName" ng-model="AssignLaundry.LocationName"></label>
                        <label id="lh-coma1"></label>
                        <label>&nbsp;</label>
                        <label id="lh-location-address" name="LocationAddress" ng-model="AssignLaundry.LocationAddress"></label>
                        <label id="lh-coma2"></label>
                        <label>&nbsp;</label>
                        <label id="lh-location-city" name="LocationCity" ng-model="AssignLaundry.LocationCity"></label>
                        <label id="lh-coma3"></label>
                        <label>&nbsp;</label>
                        <label id="lh-location-state" name="LocationState" ng-model="AssignLaundry.LocationState"></label>
                        <label id="lh-coma4"></label>
                        <label>&nbsp;</label>
                        <label id="lh-location-country" name="LocationCountry" ng-model="AssignLaundry.LocationCountry"></label>
                        <label id="lh-coma5"></label>
                        <label>&nbsp;</label>
                        <label id="lh-location-phone" name="LocationPhone" ng-model="AssignLaundry.LocationPhone"></label>
                        <label id="lh-coma6"></label>
                        <label>&nbsp;</label>
                        <label id="lh-location-zip" name="LocationZipcode" ng-model="AssignLaundry.LocationZipcode"></label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div class="action-group">
                            <button type="button" ng-click="saveLaundry(FormAssignLaundry)" class="btn blue fa fa-save" 
                            ng-disabled="FormAssignLaundry.$invalid"> Save</button>
                            <button type="button" ng-click="ClearLaundry(FormAssignLaundry)" class="btn green fa fa-close"> Clear</button>
                        </div>
                    </div>
                </div> 
            </div>
        </form>
    </div>
</div>
<div class="portlet-body">
    <div class="form-body">
        <div class="portlet light form-view mb-3" >
            <div class="portlet-title">
                <div class="caption">
                    <h3 class="UserName">
                        Laundry History
                    </h3>
                </div>					
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table id="laundry-details-data-table" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                        <thead>
                            <tr>
                                <td class="check-box-column">
                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" for="check-all-customer-laundry-info">
                                        <input type="checkbox" class="checkboxes check-all" value="1" ng-model="selectAll" id="check-all-customer-laundry-info"/>
                                        <span></span>
                                    </label>
                                </td>
                                <td>Location</td>
                                <td>Laundry Assignment</td>
                                <td>Logistics</td>
                                <td>Delivery Start Date</td>
                                <td>Delivery End Date</td>
                                <td class="action-column">Edit</td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade in" id="assignLaundry"  data-width="400">  
    <div class="modal-header" style="background-color: #299d9d;">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="false"></button>
        <h3><span class="modal-title custom-font-color">RNT - Customer Management</span></h3>
    </div>
    <div class="modal-header">
        <p><h3> &nbsp;Laundry Info - Saved Successfully</h3></p>
        <!-- <button class="btn green" style="float: right;" data-dismiss="modal" aria-hidden="false"> Ok</button> -->
    </div>
</div>