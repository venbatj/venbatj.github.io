<div class="ui-page">
    <div class="portlet light mb-3">
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-12">
                    <h3><strong>Product</strong></h3>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet light">
        <div class="portlet-body">            
            <div class="row">
                <div class="col-xs-12 col-md-9">
                    <table id="product-data-table" class="table table-striped table-bordered table-hover dt-responsive" width="100%">
                        <thead>
                            <tr>
                                <td class="check-box-column">
                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline" for="check-all-product">
                                        <input type="checkbox" class="checkboxes check-all" value="1" id="check-all-product"/>
                                        <span></span>
                                    </label>
                                </td>
                                <td>Category</td>
                                <td>Product</td>
                                <td>Variant</td>
                                <td>Description</td>
                                <td class="action-column">Edit</td>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="col-xs-12 col-md-3">
                    <form name="FormProduct" role="form" novalidate>
                        <div class="form-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group" ng-class="{'has-error' : FormProduct.CategoryID.$invalid && FormProduct.CategoryID.$touched}">
                                        <label class="fld-required">Category</label>
                                        <div class="input-group">
                                            <select id="category-id" name="CategoryID" class="form-control select2" required 
                                            ng-model="FormData.CategoryID" ng-change="onCategoryChange(C.CategoryID)"> 
                                                <option value="{{C.ID}}" ng-repeat="C in CategoryList">{{C.CategoryName}}</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group" ng-class="{'has-error' : FormProduct.ProductName.$invalid && FormProduct.ProductName.$touched}">
                                        <label class="fld-required">Product</label>
                                        <div class="input-group">
                                            <input ng-model="FormData.ProductName" name="ProductName" type="text" class="form-control" required />
                                            <p ng-show="FormProduct.ProductName.$invalid && FormProduct.ProductName.$touched" class="help-block">This field is required.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group" ng-class="{'has-error' : FormProduct.VariantID.$invalid && FormProduct.VariantID.$touched}">
                                        <label class="fld-required">Variant</label>
                                        <div class="input-group">
                                            <select id="variant-id" name="VariantID" class="form-control select2" required multiple="multiple" 
                                            ng-model="FormData.VariantID" ng-change="onVariantIDChange(V.VariantID)"> 
                                                <option value="{{V.ID}}" ng-repeat="V in VariantIDList">{{V.VariantName}}</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>Description</label>
                                        <div class="input-group">
                                            <textarea ng-model="FormData.Description" name="Description" type="text" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <div class="action-group">
                                            <button type="button" ng-click="formSubmit(FormProduct.$valid)" class="btn blue" ng-disabled="FormProduct.$invalid">Save</button>
                                            <button type="button" ng-click="formClear()" class="btn green">Clear</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div ng-if="ShowErrorMsg" class="alert alert-danger">
                            <button class="close" data-close="alert"></button>
                            <span class="error-txt">{{ErrorMsg}}</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>    
</div>